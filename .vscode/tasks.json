{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üîß Auto Meta Watcher",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/.vscode/auto-meta-watcher.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "üõ†Ô∏è Fix Meta Files",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/.vscode/fix-meta.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üóëÔ∏è Remove All Meta Files",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "$srcPath = '${workspaceFolder}/src'; if (Test-Path $srcPath) { Get-ChildItem -Path $srcPath -Recurse -Filter 'init.meta.json' | ForEach-Object { Write-Host ('Removendo: ' + $_.FullName) -ForegroundColor Yellow; Remove-Item $_.FullName -Force -ErrorAction SilentlyContinue }; Write-Host 'Todos removidos!' -ForegroundColor Green } else { Write-Host 'Pasta src nao encontrada!' -ForegroundColor Red }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üöÄ Rojo: Build",
            "type": "shell",
            "command": "rojo",
            "args": [
                "build",
                "--output",
                "game.rbxl"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "üöÄ Rojo: Serve",
            "type": "shell",
            "command": "rojo",
            "args": [
                "serve"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
